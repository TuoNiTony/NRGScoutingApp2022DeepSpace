<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NRGScoutingApp2022DeepSpace.MatchEntryShell"
    xmlns:local="clr-namespace:NRGScoutingApp2022DeepSpace.Views.MatchEntryViews"
    Title="Match Entry Shell"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Match Timer"
            ContentTemplate="{DataTemplate local:MatchTimerPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />

        <ShellContent
            Title="Match Events"
            ContentTemplate="{DataTemplate local:MatchEventsPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />

        <ShellContent
            Title="Match Info"
            ContentTemplate="{DataTemplate local:MatchInfoPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </TabBar>
</Shell>